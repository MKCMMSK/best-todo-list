<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Home Page</title>

    <!-- CSS -->
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

    <!-- JS -->
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script type="text/javascript" src="/scripts/client.js"></script>

  </head>

  <body>
    <nav><i class="material-icons">list</i> To-do List
    <% if(locals.user) { %>
      <form action="/logout" method="POST">
        <button type="submit" class="logout waves-effect waves-light btn" name="logout" value="<%= user %>">
          Logout
        </button>
      </form>
    <% }; %>
    </nav>

    <div>
      <form id="newToDo">
        <textarea name="compose" id="compose" placeholder="Add new to-do"></textarea>
        <button type="submit" class="btn-floating btn-large waves-effect waves-light"><i class="material-icons">add</i></button>
      </form>
    </div>

    <ul class="collapsible popout">
      <li>
        <div class="collapsible-header">
          <h6>To Read</h6>
            <a class="arrow-icon">
              <span class="left-bar"></span>
              <span class="right-bar"></span>
            </a>
        </div>
        <div class="collapsible-body">
          <ul class="collapsible popout to_read_list">
          </ul>
        </div>
      </li>

      <li>
        <div class="collapsible-header">
          <h6>To Watch</h6>
          <a class="arrow-icon">
            <span class="left-bar"></span>
            <span class="right-bar"></span>
          </a>
        </div>
        <div class="collapsible-body">
          <ul class="collapsible popout to_watch_list">

          </ul>
        </div>
      </li>

      <li>
        <div class="collapsible-header">
          <h6>To Eat</h6>
          <a class="arrow-icon">
            <span class="left-bar"></span>
            <span class="right-bar"></span>
          </a>
        </div>
        <div class="collapsible-body">
          <ul class="collapsible popout to_eat_list">
              <li>
                </li>
                </ul>
          </div>
        </li>

        <li>
        <div class="collapsible-header">
          <h6>To Buy</h6>
          <a class="arrow-icon">
            <span class="left-bar"></span>
            <span class="right-bar"></span>
          </a>
        </div>
        <div class="collapsible-body">
          <ul class="collapsible popout to_buy_list">
          </ul>
        </div>
      </li>

      <li>
        <div class="collapsible-header">
          <h6>Miscellaneous</h6>
          <a class="arrow-icon">
            <span class="left-bar"></span>
            <span class="right-bar"></span>
          </a>
        </div>
        <div class="collapsible-body">
          <ul class="collapsible popout misc_list">

          </ul>
        </div>
      </li>
    </ul>

    <footer>
      Footer
    </footer>
  </body>
</html>
